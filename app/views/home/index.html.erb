<h1 align="center">Bem vindo ao Friends!</h1>

<h2 align="center">A maior rede social do mundo!</h2>
    <style>

    	.box {
    		border: 1px solid;
    		font-size: 20px;
    		background: ghostwhite;
    		margin: 10px;
    		padding: 5px;

    	}

    </style>
		
	<% todos = Publication.all%>
	<% todos.each do |publicacao| %>
	<div class="box">
    	<p><%= publicacao.legenda %></p>
        <p align="right"> Likes: <%= publicacao.like %>
        <%= link_to 'curtir', "curtir/#{publicacao.id}" %></p>
    </div>
    <br>
	<%end%>


